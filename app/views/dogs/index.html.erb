<h1>Cute Dogs</h1>

<% if user_signed_in? %>
  <p>Only for logged users</p>
  <% @dogs.each do |f| %>
    <div class="col-md-2">
    <%= link_to dog_path(f) do %>
      <%= image_tag("#{f.image}") %>
    <% end %>
    <%= link_to like_dog_path(f), method: :put do %>
      <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center"></span> <%= f.get_upvotes.size %>
    <% end %>
    <br>
    <br>
    </div>
  <% end %>
<% end %>

<p><%= paginate @dogs %></p>

<br>
<br>

<p><%= link_to "Homepage", root_path, class: "btn btn-default" %></p>